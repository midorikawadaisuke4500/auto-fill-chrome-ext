{
    "manifest_version": 3,
    "name": "Auto Fill Ext",
    "version": "1.0.0",
    "description": "Auto-Input Completion Chrome Extension for multiple sites.",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "public/popup.html",
        "default_icon": {
            "16": "public/icon16.png",
            "48": "public/icon48.png",
            "128": "public/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}